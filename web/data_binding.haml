!!!
%html/
%meta(name="viewport" content="width=device-width, initial-scale=1, user-scalable=no")
%title paper-input
%script(src="packages/web_components/platform.js")
%script(src="packages/web_components/dart_support.js")
%link(rel="import" href="packages/paper_elements/roboto.html")
%link(rel="import" href="packages/paper_elements/paper_input.html")
%style(shim-shadowdom)
  body {
  font-family: RobotoDraft, 'Helvetica Neue', Helvetica, Arial;
  margin: 0;
  padding: 24px;
  \-webkit-user-select: none;
  \-moz-user-select: none;
  \-ms-user-select: none;
  user-select: none;
  \-webkit-tap-highlight-color: rgba(0,0,0,0);
  \-webkit-touch-callout: none;
  }
%body(unresolved touch-action="auto")/
%section
  %paper-input(label="Type something...")
  %br/
  %paper-input(label="Type only numbers..." validate="^[0-9]*$" error="Input is not a number!")
  %br/
  %paper-input(disabled label="I'm disabled")
  %br/
  %paper-input(floatingLabel label="Floating label")
  %br/
  %paper-input(floatingLabel label="Type only numbers... (floating)" validate="^[0-9]*$" error="Input is not a number!")
  %br/
  %paper-input(multiline label="Type multiple lines here...")
  %br/
  %paper-input(multiline rows="3" label="This input is 3 rows high")
  %br/
  %paper-input(multiline maxRows="3" label="This input is at most 3 rows high")
  %br/
  %paper-input(multiline floatingLabel label="Multiple lines and a floating label")
%script(type="application/dart")
  export 'package:polymer/init.dart';
