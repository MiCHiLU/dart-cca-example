!!!
%html/
%meta(charset="UTF-8")
%meta(http-equiv="X-UA-Compatible" content="IE=edge")
%meta(name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no")
%title An example of Cordova Chrome Apps written in AngularDart.
:css
  .ng-show {
    display: block !important;
  }
  [ng-cloak], [data-ng-cloak], [x-ng-cloak], .ng-cloak, .x-ng-cloak, .ng-hide {
    display: none !important;
  }
  body {
    font-family: RobotoDraft, sans-serif;
    color: #333;
    margin: 0;
    -webkit-user-select: none;
    -moz-user-select: none;
    -ms-user-select: none;
    user-select: none;
    -webkit-tap-highlight-color: rgba(0,0,0,0);
    -webkit-touch-callout: none;
  }

%link(rel="import" href="packages/polymer/polymer.html")
%script(src="js/browser_dart_csp_safe.js")
%script(src="packages/chrome/bootstrap.js" defer)

%link(rel="import" href="packages/core_elements/core_icons.html")
%link(rel="import" href="packages/paper_elements/sampler_scaffold.html")
%link(rel="import" href="packages/paper_elements/roboto.html")
%link(rel="import" href="packages/core_elements/core_item.html")
%link(rel="import" href="packages/core_elements/core_submenu.html")
%link(rel="import" href="packages/paper_elements/paper_icon_button.html")
%link(rel="import" href="packages/paper_elements/paper_fab.html")

%script(src="main.dart" type="application/dart")
%body(app ng-app="starter" ng-controller="app" unresolved)/

%sampler-scaffold(label="Paper Elements" fit touch-action="auto")
  %paper-icon-button.menuButton(icon="menu")
  %paper-fab.sourceButton.bottom(icon="launch")
  %core-item(label="Checkbox" tag="paper-checkbox" url="example/paper_checkbox.html")
  %core-item(label="Radio Button" tag="paper-radio-button" url="example/paper_radio_group.html")
  %core-item(label="Toggle Button" tag="paper-toggle-button" url="example/paper_toggle_button.html")
  %core-item(label="Input" tag="paper-input" url="example/paper_input.html")
  /%core-item(label="Ripple Effect" tag="paper-ripple" url="example/../paper-ripple/demo.html")
  %core-item(label="Toolbar" tag="core-toolbar" url="example/core_toolbar.html")
  %core-item(label="Progress Bar" tag="paper-progress" url="example/paper_progress.html")
  %core-item(label="Slider" tag="paper-slider" url="example/paper_slider.html")
  %core-item(label="Tabs" tag="paper-tabs" url="example/paper_tabs.html")
  %core-item(label="Button" tag="paper-button" url="example/paper_button.html")
  %core-item(label="Icon Button" tag="paper-icon-button" url="example/paper_icon_button.html")
  %core-item(label="Floating Action Button" tag="paper-fab" url="example/paper_fab.html")
  %core-item(label="Menu Button" tag="paper-menu-button" url="example/paper_menu_button.html")
  %core-item(label="Dialog" tag="paper-dialog" url="example/paper_dialog.html")
  %core-item(label="Shadow" tag="paper-shadow" url="example/paper_shadow.html")
  %core-item(label="Toast" tag="paper-toast" url="example/paper_toast.html")
